generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model VideoEntry {
  id           String   @id @default(uuid())
  youtubeUrl   String
  title        String
  thumbnailUrl String
  tags         String[]
  category     String
  goodPoints   String
  memo         String
  rating       Int
  publishDate  DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([createdAt])
  @@index([rating])
  @@index([publishDate])
}
